<launch>
	<arg
		name="record"
		default="disable"
	/>
	<include file="$(find turtlebot_gazebo)/launch/turtlebot_world.launch"></include>

	<node
	    pkg="Turtlebot-walker-algorithm"
		name="walker"
		type="walker"
		output="screen"
		launch-prefix="xterm -e"
	/>

	<node
		pkg="rosbag"
		name="record"
		type="record"
		args="-a -O $(find Turtlebot-walker-algorithm)/Results/record.bag"
		if="$(eval record == 'enable')"
	/>

</launch>